@model IMS.Models.StockPurchase

@{
    ViewBag.Title = "Delete";
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Deleting Purchase</h3>
</div>

<!--MODAL BODY-->
<div class="modal-body">
    <h4 class="text-center"><strong> Product Name: </strong> @Html.DisplayFor(model => model.StockPurchaseProductName) </h4>
    <h4 class="text-center"><strong> Supplier: </strong> @Html.DisplayFor(model => model.StockPurchaseSupplier) </h4>
    <h4 class="text-center"><strong> Quantity: </strong> @Html.DisplayFor(model => model.StockPurchaseQuantity) </h4>
    
    
    <h3 class="text-center">Are you sure you want to delete ?</h3>

</div>

@using (Html.BeginForm("Delete", "StockPurchase", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <!--MODAL FOOTER-->
    <div class="modal-footer">
        <input type="submit" value="Yes" class="btn btn-danger" />
        <button class="btn btn-warning" data-dismiss="modal">No</button>
    </div>
}

