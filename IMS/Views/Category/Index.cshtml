@model IEnumerable<IMS.Models.Category>

@{
    ViewBag.Title = "Index";
    IMS.DAL.IMS_DB db = new IMS.DAL.IMS_DB();
}

<style>
    td {
        text-align: center;
        vertical-align: middle;
    }

    th {
        text-align: center;
        vertical-align: middle;
    }
</style>
<h3 class="pull-right">
    <a href="@Url.Action("Create", "Category")" class="btn btn-primary btn-sm" data-modal=""><i style="color: red;" class="fa fa-2x fa-plus"></i> Add</a>
</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            <h4> STOCK CATEGORIES </h4>
            <h4><i class="fa fa-search-plus pull-right"></i></h4>
            <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th>
                                Number of Products
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @db.Product.ToArray().Length
                                </td>
                                <td>
                                    <a href="@Url.Action("Index", "Product", new { id = item.CategoryId })"><i class="fa fa-2x fa-share-square-o"></i></a>
                                    <a href="@Url.Action("Edit", "Category", new { id = item.CategoryId })" data-modal=""><i style="color: sandybrown;" class="fa fa-2x fa-edit"></i></a>
                                    <a href="@Url.Action("Delete", "Category", new { id = item.CategoryId })" data-modal=""><i style="color: red;" class="fa fa-2x fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div><!-- /content-panel -->
    </div><!-- /col-lg-4 -->
</div><!-- /row -->
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/Appjs/IMS.js"></script>